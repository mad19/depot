.page-header
  %h1 Список заказов

%table.table.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th Корзина
      %th Пользователь
      %th Адрес доставки
      %th Статус
      %th Комментарий
      %th
      %th
      %th

  %tbody
    - @orders.each do |order|
      %tr
        %td= order.cart_id
        %td= order.user_id
        %td= order.address
        %td= status_view(order.status)
        %td= order.comment
        %td= link_to 'Показать', order
        %td= link_to 'Редактировать', edit_order_path(order)
        %td= link_to 'Удалить', order, :method => :delete, :data => { :confirm => 'Вы уверены?' }

%br
= paginate @orders