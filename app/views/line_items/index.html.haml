%h1 Список элементов корзины

%table
  %thead
    %tr
      %th Количество
      %th Цена
      %th Корзина
      %th Товар
      %th
      %th
      %th
      
  %tbody
    - @line_items.each do |line_item|
      %tr
        %td= line_item.quantity
        %td= line_item.price
        %td= line_item.cart.id
        %td= line_item.product.name
        %td= link_to 'Показать', line_item
        %td= link_to 'Изменить', edit_line_item_path(line_item)
        %td= link_to 'Удалить', line_item, :method => :delete, :data => { :confirm => 'Вы уверены?' }

%br

= link_to 'Новый элемент корзины', new_line_item_path
